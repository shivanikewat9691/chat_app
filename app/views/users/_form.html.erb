<div class="container d-flex align-items-center justify-content-center vh-100">
  <div class="card">
    <div class="card-body">
      <h1 class="text-center text-primary">Signup</h1>
      <%= form_with model: @user do |f| %>

        <div class="form-group">
          <%= f.label :full_name %>
          <%= f.text_field :full_name, class: "form-control", placeholder: "Enter your email" %>
        </div><br>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.text_field :password, class: "form-control", placeholder: "Enter your email" %>
        </div><br>

        <div class="form-group text-center">
          <%= f.submit "Create User", class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>